#The ConnectorDB nginx configuration

map $http_upgrade $connection_upgrade {
	default upgrade;
	''      close;
}

#Redirect all http traffic to https
server {
	listen 80 default_server;
	listen [::]:80 default_server ipv6only=on;

	server_name connectordb.com;
	return 301 https://$host$request_uri;
}

#The https server serves from a jekyll website, and shows an "app is down" message if
#it can't connect to 
server {
	listen 443;
	server_name connectordb.com;

	ssl on;
	ssl_certificate {{CONNECTORDB_DIR}}/ssl/connectordb.crt;
	ssl_certificate_key {{CONNECTORDB_DIR}}/ssl/connectordb.key;

	ssl_session_timeout 5m;

	ssl_protocols TLSv1 TLSv1.1 TLSv1.2; # don't use SSLv3 ref: POODLE
	ssl_ciphers "HIGH:!aNULL:!MD5 or HIGH:!aNULL:!MD5:!3DES";
	ssl_prefer_server_ciphers on;
    
    ssl_dhparam {{CONNECTORDB_DIR}}/ssl/dhparams.pem;

	location / {
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection $connection_upgrade;
		
        	proxy_pass_request_headers on;
        	proxy_pass http://127.0.0.1:8000;
	}
}
