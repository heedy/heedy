<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="location_frequency"
        android:title="@string/pref_location_frequency"
        android:entries="@array/pref_location_frequency_titles"
        android:entryValues="@array/pref_location_frequency_values"
        android:defaultValue="0"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
    <CheckBoxPreference android:key="monitor_frequency"
        android:title="@string/pref_monitor_enabled"
        android:defaultValue="true" />
    <CheckBoxPreference android:key="fitness_monitor"
        android:title="@string/pref_fitness_enabled"
        android:defaultValue="true" />
    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
